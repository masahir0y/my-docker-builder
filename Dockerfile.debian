ARG FROM=debian
#ARG FROM=debian:jessie
#ARG FROM=debian:stretch
#ARG FROM=debian:buster
#ARG FROM=debian:sid

FROM ${FROM}

# user name
ARG USER=foo

# packages to install
ARG PKGS=" \
	apt-file \
	autoconf \
	autopoint \
	bc \
	bison \
	build-essential \
	clang \
	cython \
	flex \
	gettext \
	git \
	gtk-doc-tools \
	libelf-dev \
	liblzma-dev \
	libssl-dev \
	libtool \
	man \
	nano \
	pkg-config \
	rsync \
	strace \
	sudo \
	texinfo \
	wget \
"

RUN \
	apt-get update && \
	# Suppress "delaying package configuration" warning
	DEBCONF_NOWARNINGS=yes apt-get install -y apt-utils && \
	# Install various packages
	apt-get install -y ${PKGS} && \
	# Set the root password to 'r'
	echo 'root:r' | chpasswd && \
	# Add a normal privilege user
	useradd -m ${USER}

# login as a normal privilege user
USER ${USER}
WORKDIR /home/${USER}
